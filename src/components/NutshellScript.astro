import { onMount } from 'astro/client';

onMount(() => {
  const script = document.createElement('script');
  script.src = 'https://cdn.jsdelivr.net/gh/ncase/nutshell/nutshell.js';
  script.onload = () => {
    if (window.Nutshell) {
      window.Nutshell.init();
    }
  };
  document.head.appendChild(script);
});
